<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>WeShare - {% block title %}{% endblock %}</title>

    <link rel="stylesheet" href="/assets/css/styleBase.css">
    {% block stylesheet %}{% endblock %}
    <link rel="icon" href="/assets/images/favicon.png">
</head>

<body>
    <header>
        <h1 id="baseTitle">WeShare</h1>
        <img id="logo" src="/assets/images/logo1.png" alt="WeShare Logo" />
        <div class="openButton">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
        <nav class='sideNav'>
            <a href="javascript:void(0)" class="closeButton">&times;</a>
            <ul class = "nav">
                <li class="navLink">Toutes les demandes</li>
                <li class="navLink">Liste express</li>
                <li class="navLink">Poster une nouvelle demande</li>
                <li class="navLink">Nouvel utilisateur</li>
            </ul>
        </nav>
        <form action="#" method="POST">
            <label for="email">Email :</label>
            <input id="email" type="email" name="email" placeholder="email" />
            <button>Connection</button>
        </form>
    </header>

    {% block content %}{% endblock %}

    <footer>
        <ul>
            <li>Nous contacter</li>
            <li>Mentions l√©gales</li>
            <li>Lien footer</li>
            <li>Lien footer</li>
        </ul>
    </footer>

    <script src="/assets/js/burgerMenu.js"></script>
    {% block javascript %}{% endblock %}
</body>
</html>
