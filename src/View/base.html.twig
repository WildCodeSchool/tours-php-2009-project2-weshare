<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>WeShare - {% block title %}{% endblock %}</title>

    <link rel="stylesheet" href="/assets/css/baseStyle.css">
    {% block stylesheet %}{% endblock %}
    <link rel="icon" href="/assets/images/favicon.png">
</head>

<body>
    <header>
        <h1 id="baseTitle">WeShare</h1>
        <a href="/home/index"><img id="logo" src="/assets/images/logo1.png" alt="WeShare Logo"></a>
        <div class="openButton">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
        <nav class='sideNav'>
            <a href="javascript:void(0)" class="closeButton">&times;</a>
            <ul class = "nav head">
                <li class="navLink"><a href="/request/list">Toutes les demandes</a></li>
                <li class="navLink">Liste express</li>
                <li class="navLink"><a href="/request/add">Nouvelle demande</a></li>
                <li class="navLink"><a href="/user/add">Nouvel utilisateur</a></li>
            </ul>
        </nav>
    </header>
    {% block content %}{% endblock %}

    <footer>
        <div class="footer-container">
            
            <div class ="column">
                <h3>L'équipe</h3>
            </div>
            <div class ="column">
                <h3>Nous contacter</h3>
            </div>
            <div class ="column">
                <h3>Mentions légales</h3>
            </div>
            <div class ="column">
                <h3>Nos partenaires</h3>
            </div>
            
        </div>
        
        <div class="reseaux-container">
            <div>
                <img class="fb"
                src="/assets/images/045-facebook.png"
                alt="facebook weshare">
            </div>
            <div>
                <img class="insta"
                src="/assets/images/034-instagram.png"
                alt="instagram weshare">
            </div>
            <div>
                <img class="twitter"
                src="/assets/images/013-twitter-1.png"
                alt="twitter weshare">
            </div>
            <div>
                <img class="github"
                src="/assets/images/039-github.png"
                alt="github weshare">
            </div>
        </div>
        <div class="copyright-container">
            <h4>© 2020 Célia  Kevin.R  Quentin  Emre  Léo , Wild Code School</h4>
        </div>
        <div id="scroll_to_top">
            <a href="#top"><img src="/assets/images/fleche.png" alt="Retourner en haut" title="Retourner en haut" /></a>
        </div>
    </footer>

    <script src="/assets/js/burgerMenu.js"></script>
    {% block javascript %}{% endblock %}
</body>
</html>
