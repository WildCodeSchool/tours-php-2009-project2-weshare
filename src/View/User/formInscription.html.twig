{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/styleFormInscription.css">{% endblock %}

{% block content %}
<div class="bg-c">
    <div class="boxForm">
      <h2 id="register">Nouvel utilisateur</h2>

      <form method="POST">
        <div class="input">
          <label for="civility">Civilité :</label>
          <input type="radio" id="civility1" name="civility" value="M">
          <label for="civility1"> M.</label>
          <input type="radio" id="civility2" name="civility" value="Mme">
          <label for="civility2"> Mme.</label>
          <input type="radio" id="civility3" name="civility" value="Autre">
          <label for="civility3"> Autre</label>
        </div><br>
        <div class="input">
            <label for="firstname">Prénom :</label>
            <input type="text" id="firstname" placeholder="prénom" name="firstname">
        </div><br>
        <div class="input">
            <label for="lastname">Nom :</label>
            <input type="text" id="lastname" placeholder="nom" name="lastname">
        </div><br>
        <div class="input">
            <label for="street">N° et voie :</label>   
            <input type="text" id="street" placeholder="numéro et voie" name="street">
        </div><br>
        <div class="input">
          <label for="townId">Ville :</label><br>
          <select id="townId" name="townId" type="choice">                
            <option>-- --</option>
            {% for town in towns %}
            <option name="townId" value={{ town.id }}>{{ town.name }} </option>
            {% endfor %}
          </select>    
        </div><br>
        <div class="input">
            <label for="phone">Téléphone :</label>   
            <input type="text" id="phone" placeholder="téléphone" name="phone">
        </div><br>
        <div class="input">
            <label for="email">E-mail :</label>    
            <input type="mail" id="email" placeholder="email" name="email">
        </div><br>
        <div class="button">
        <input type="submit" value="Inscription">
        </div>
      </form>
    </div>
  </div>  
{% endblock %}